{
    "manifest_version": 2,
    "name": "FMHY SafeGuard",
    "author": "Kenneth Hendricks & contributors",
    "version": "1.0.7",
    "icons": {
        "128": "res/ext_icon_144.png"
    },
    "page_action": {
      "default_icon": {
        "128": "res/ext_icon_144.png"
      },
      "default_popup": "pub/index.html"
    },
    "permissions": [
        "activeTab",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "notifications"
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{5d554479-7cc4-487f-bd25-d8fc67a42602}"
        }
    }
}
